<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.estimote.mirror.simpledemo.MainActivity">

  <Button
      android:text="Big Button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/big_button" android:layout_gravity="center_vertical|center" android:padding="50dp"/>
  <Button
      android:text="Small Button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/small_button" android:layout_gravity="center_vertical|center" android:padding="30dp"/>
</LinearLayout>
